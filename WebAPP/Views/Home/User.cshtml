@model WebAPP.Models.UserModel

@{
    ViewData["Title"] = "User";
}
<h1>@ViewData["Title"]</h1>

<form method="POST" asp-action="Update">
    <div class="form-group">
        <input type="hidden" asp-for="Id"/>
        <input type="text" asp-for="Name" class=form-control />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Surname" class=form-control />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Email" class=form-control />
    </div>
    <div class="form-group">
        <input type="text" asp-for="BirthDate" class=form-control />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Phone" class=form-control />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Location" class=form-control />
    </div>
    <div class="form-group">
        <input type="text" asp-for="Photo" class=form-control />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>