@model WebAPP.Models.UserModel

@{
    ViewData["Title"] = "Update";
}
<h1>@ViewData["Title"]</h1>

<form method="POST" asp-action="Update" enctype="multipart/form-data">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="hidden" asp-for="Id" />
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Surname">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label for="BirthDate">BirthDate</label>
        <input type="text" asp-for="BirthDate" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Phone">Phone</label>
        <input type="text" asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Location">Location</label>
        <textarea type="text" asp-for="Location" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ImageFile" class="control-label"></label>
        <input type="file" asp-for="ImageFile" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <img class="image" width="100px" height="100px" src="@(" /image/" + Model.Photo)" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>